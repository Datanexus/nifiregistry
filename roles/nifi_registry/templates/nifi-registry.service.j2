[Unit]
Description=Apache NiFi Registry
Documentation=https://nifi.apache.org/docs/nifi-registry-docs/index.html
After=network.target remote-fs.target

[Service]
Type=forking
User={{ registry_user }}
Group={{ registry_group }}
Environment=JAVA_HOME=/usr/lib/jvm/java
ExecStart={{ registry.install_dir }}/{{ registry.service_name }}-{{ registry.version }}/bin/{{ registry.service_name }}.sh start
ExecStop={{ registry.install_dir }}/{{ registry.service_name }}-{{ registry.version }}/bin/{{ registry.service_name }}.sh stop
ExecReload={{ registry.install_dir }}/{{ registry.service_name }}-{{ registry.version }}/bin/{{ registry.service_name }}.sh reload

[Install]
WantedBy=multi-user.target
